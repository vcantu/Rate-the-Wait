    <item android:state_pressed="true"
        android:state_window_focused="true" >
        <bitmap android:src="@drawable/ic_dollar_gray"
            android:gravity="center" />
    </item>

    <item android:state_focused="true"
        android:state_window_focused="true">
    <bitmap android:src="@drawable/ic_dollar_gray"
        android:gravity="center" />
</item>

    <item android:state_selected="true"
        android:state_window_focused="true">
        <bitmap android:src="@drawable/ic_dollar_gray"
            android:gravity="center" />
    </item>

    <item>
        <bitmap android:src="@drawable/ic_dollar_gray"
            android:gravity="center" />
    </item>


</selector>